<h2>Create New Figure</h2>

<!-- add content here -->
<form action="/figures" method="POST">
  <label>Figure Name:</label>
  <br>
  <input type="text" name="figure[name]" id="figure_name"><br>
<label>Their titles:</label>
      <%Title.all.each do |t|%>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value=<%=t.id%>><%=t.name%><br>
      <%end%>
      <br>
      <label>or make a new title:</label>
      <input type="text" name="title[name]" id="new_title"><br>
      <br>
  <%Landmark.all.each do |l|%>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>"><%=l.name%><br>
      <%end%>
 
  

      <label>Or, make a new landmark</label>
      <input type="text" name="landmark[name]" id="new_landmark" value="landmark"><br>

       <input type="submit" value="Create New Figure">
      
</form>

<a class="button" href="/Figures">Figures</a>
